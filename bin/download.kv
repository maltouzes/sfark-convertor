Download:
<Download>:
    orientation: "vertical"

    BoxLayout:
        height: "30dp"
        size_hint_y: None
        Button:
            size_hint_x: 5
            text: "About"
            on_release: root.about()

    BoxLayout:
        Label:
            text: root.file_hello
            size_hint_x: 25

    BoxLayout:
        height:"30dp"
        size_hint_y: None
        Button:
            text: "Stark Installation"
            on_release: root.test_threading()
            on_release: root.loading()

<PassLayout>:
    orientation: "vertical"
    BoxLayout:
        Label:
            text: root.text
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            text: root.textinput
            size_hint_x: 50
        Button:
            text: "Cancel"
            size_hint_x: 25
            on_release: root.cancel()
        Button:
            text: "Ok"
            size_hint_x: 25
            on_release: root.cancel()

<XBoxLayout>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: root.text

        BoxLayout:
            height: 30
            size_hint_y: None
            Button:
                text: "Close"
                on_release: root.cancel()

<LoadingPopup>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: root.text
