Sfark:
<Sfark>:
    orientation: "vertical"

    BoxLayout:
        height:"30dp"
        size_hint_y: None
        Button:
            size_hint_x: 5
            text: "About"
            on_release: root.about()

    BoxLayout:
        Label:
            text: root.file_hello
            size_hint_x: 25

    BoxLayout:
        height:"30dp"
        size_hint_y: None
        Label:
            text: root.file_selected_is

    BoxLayout:
        height:"30dp"
        size_hint_y: None
        Label:
            text: root.file_selected

    BoxLayout:
        height:"30dp"
        size_hint_y: None
        Button:
            text: "Choose file"
            on_release: root.show_load()

    BoxLayout:
        height:"30dp"
        size_hint_y: None
        Button:
            size_hint_x: 25
            text: "Convert"
            on_press: root.convert_sfark()


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Select"
                on_release: root.load(filechooser.path, filechooser.selection)


<loadingPopup>:
    BoxLayout:
        Label:
            text:"Conversion in progress"

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Fermer"
                on_release: root.cancel()


<XBoxLayout>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: root.text

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Close"
                on_release: root.cancel()
